	to_chat(src, "<span class='warning'><b>вы заметили изменения в своих законах:</b></span><br>")
	to_chat(src, "<span class='warning'>[ionnum()]. [ion_law]</span>")
	add_ion_law(ion_law)
	message_admins("Ion storm added ion law [ionnum()]: [ion_law]")

