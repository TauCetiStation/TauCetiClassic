<div class='notice'>
	{{if data.siliconUser}}
		<div class="itemContentSmall">
			Интерфейс:
		</div>
		<div class="itemContentFull">
			{{:helper.link('Заблокирован', 'locked', {'toggleaccess' : 1}, data.locked ? 'selected' : null)}}{{:helper.link('Разблокирован', 'unlocked', {'toggleaccess' : 1}, data.malfStatus >= 2 ? 'linkOff' : (data.locked ? null : 'selected'))}}
		</div>
		<div class="clearBoth"></div>
	{{else}}
		{{if data.locked}}
			Проведите картой для разблокировки интерфейса.
		{{else}}
			Проведите картой для разблокировки интерфейса.
		{{/if}}
	{{/if}}
</div>

<div style="min-width: 480px">

	<h3>Статус</h3>

	<div class="item">
		<div class="itemLabel">
			Основное питание:
		</div>
		<div class="itemContent">
			{{if data.locked && !data.siliconUser}}
				{{if data.isOperating}}
					<span class='good'>ВКЛ</span>
				{{else}}
					<span class='bad'>ВЫКЛ</span>
				{{/if}}
			{{else}}
				{{:helper.link('ВКЛ', 'power', {'breaker' : 1}, data.isOperating ? 'selected' : null)}}{{:helper.link('ВЫКЛ', 'close', {'breaker' : 1}, data.isOperating ? null : 'selected')}}
			{{/if}}
		</div>
	</div>

	<div class="item">
		<div class="itemLabel">
			Внешнее питание:
		</div>
		<div class="itemContent">
			{{if data.externalPower == 2}}
				<span class='good'>Достаточное</span>
			{{else data.externalPower == 1}}
				<span class='average'>Недостаточное</span>
			{{else}}
				<span class='bad'>Отсутствует</span>
			{{/if}}
		</div>
	</div>

	<div class="item">
		<div class="itemLabel">
			Батарея:
		</div>
		{{if data.powerCellStatus == null}}
			<div class="itemContent bad">		
				Батарея отсутствует.
			</div>
		{{else}}
			
			{{:helper.displayBar(data.powerCellStatus, 0, 100, (data.powerCellStatus >= 50) ? 'good' : (data.powerCellStatus >= 25) ? 'average' : 'bad')}}
			<div class="itemContent" style="width: 60px">		
				{{:helper.round(data.powerCellStatus*10)/10}}%
			</div>	
		{{/if}}
	</div>

	{{if data.powerCellStatus != null}}
		<div class="item">
			<div class="itemLabel">
				Режим зарядки:
			</div>
			<div class="itemContent">
				{{if data.locked && !data.siliconUser}}
					{{if data.chargeMode}}
						<span class='good'>Авто</span>
					{{else}}
						<span class='bad'>ВЫКЛ</span>
					{{/if}}				
				{{else}}
					{{:helper.link('АВТО', 'refresh', {'cmode' : 1}, data.chargeMode ? 'selected' : null)}}{{:helper.link('ВЫКЛ', 'close', {'cmode' : 1}, data.chargeMode ? null : 'selected')}}
				{{/if}}
				&nbsp;
				{{if data.chargingStatus > 1}}
					[<span class='good'>Полный заряд</span>]
				{{else data.chargingStatus == 1}}
					[<span class='average'>Заряжается</span>]
				{{else}}
					[<span class='bad'>Не заряжается</span>]
				{{/if}}
			</div>
		</div>
	{{/if}}


	<h3>Каналы питания</h3>

	{{for data.powerChannels}}
		<div class="item">
			<div class="itemLabel">
				{{:value.title}}:
			</div>
			<div class="itemContent" style="width: 70px; text-align: right">
				{{:value.powerLoad}}&nbsp;W
			</div>
			<div class="itemContent" style="width: 105px">
				&nbsp;&nbsp;
				{{if value.status <= 1}}
					<span class='bad'>ВЫКЛ</span>
				{{else value.status >= 2}}
					<span class='good'>ВКЛ</span>
				{{/if}}
				{{if data.locked}}
					{{if value.status == 1 || value.status == 3}}
						&nbsp;&nbsp;АВТО
					{{else}}
						&nbsp;&nbsp;Ручн.
					{{/if}}		
				{{/if}}
			</div>
			{{if !data.locked || data.siliconUser}}
				<div class="itemContentFull">
					{{:helper.link('Авто', 'refresh', value.topicParams.auto, (value.status == 1 || value.status == 3) ? 'selected' : null)}}
					{{:helper.link('ВКЛ', 'power', value.topicParams.on, (value.status == 2) ? 'selected' : null)}}
					{{:helper.link('ВЫКЛ', 'close', value.topicParams.off, (value.status == 0) ? 'selected' : null)}}
				</div>
			{{/if}}
		</div>
	{{/for}}

	<div class="item" style="font-weight: bold">
		<div class="itemLabel">
			Общая нагрузка:
		</div>
		<div class="itemContent">
			{{if data.totalCharging}}
				{{:data.totalLoad}}W (+ {{:data.totalCharging}}W заряжается)
			{{else}}
				{{:data.totalLoad}}W
			{{/if}}
		</div>
	</div>

	<div class="item">&nbsp;</div>

	<div class="item">
		<div class="itemLabel">
			Блокировка крышки:
		</div>
		<div class="itemContent">
			{{if data.locked && !data.siliconUser}}
				{{if data.coverLocked}}
					<span class='good'>ВКЛ</span>
				{{else}}
					<span class='bad'>ВЫКЛ</span>
				{{/if}}
			{{else}}
				{{:helper.link('ВКЛ', 'locked', {'lock' : 1}, data.coverLocked ? 'selected' : null)}}{{:helper.link('ВЫКЛ', 'unlocked', {'lock' : 1}, data.coverLocked ? null : 'selected')}}
			{{/if}}
		</div>
	</div>
	
	{{if !data.locked || data.siliconUser}}
		<div class="item">
			<div class="itemLabel">
				Ночное освещение:
			</div>
			<div class="itemContent">
				{{:helper.link(data.nightshift_lights ? 'ВЫКЛ' : 'ВКЛ', 'power', {'toggle_nightshift' : 1})}}
				{{if data.nightshift_lights}}
					{{:helper.link('Изменить тему', 'lightbulb', {'change_nightshift' : 1})}}
				{{/if}}
			</div>
		</div>
	{{/if}}

	{{if data.siliconUser}}
		<h3>Перегрузка системы</h3>

		<div class="item">
			{{:helper.link('Перегрузка платы освещения', 'lightbulb', {'overload' : 1})}}
			{{if data.malfStatus == 1}}
				{{:helper.link('Перегрузка управления', 'script', {'malfhack' : 1})}}
			{{else data.malfStatus > 1}}
				<div class='notice'>APC взломан</div>
			{{/if}}
		</div>
	{{/if}}

</div>
		